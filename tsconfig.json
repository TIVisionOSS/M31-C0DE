{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "./dist",
        "lib": ["ES2020", "DOM"],
        "sourceMap": true,
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react"
    },
    "include": ["src", "vite.config.ts"],
    "exclude": ["node_modules"]
}